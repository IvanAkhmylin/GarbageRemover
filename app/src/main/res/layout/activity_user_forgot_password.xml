<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserForgotPassword"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center_vertical">
    <TextView
        android:textSize="@dimen/hint_size"
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:text="@string/please_enter_the_email_you_provided_during_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        app:hintTextAppearance="@style/HintTextInputLayout"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="10dp"
            android:imeOptions="actionDone"
            android:textColorHint="@color/blue"
            android:background="@drawable/edit_text_style"
            android:id="@+id/email_forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <Button

        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textSize="@dimen/button_text_size"
        android:textColor="@android:color/white"
        android:background="@drawable/button_signin_style"
        android:onClick="btn_ForgotPass"
        android:text="@string/send_email"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>