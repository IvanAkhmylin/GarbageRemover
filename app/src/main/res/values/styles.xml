<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HintTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/hint_size</item>
    </style>

    <style name="NarrowDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">80%</item>
        <item name="windowFixedWidthMinor">80%</item>
    </style>
</resources>
