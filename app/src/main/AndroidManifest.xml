<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.garbageremover">
    <uses-permission android:name="android.permission.CAMERA"
        android:required="true"  />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:name=".CheckCurrentUser"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".CreateRequestForClean"></activity>
        <activity
            android:name=".ActivityWithCleanRequest"
            android:label="@string/title_activity_with_clean_request" />
        <activity
            android:name=".ShowImageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserForgotPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpFields"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginSignUpActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>